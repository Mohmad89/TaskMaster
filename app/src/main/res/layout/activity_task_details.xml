<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/task_details_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_wave__2_"
    android:padding="10dp"
    tools:context=".ui.TaskDetails"
    >

    <ImageView
        android:id="@+id/task_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />
    <TextView
        android:id="@+id/text_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="90px"
        android:text="Title"
        android:textColor="@color/black"
        android:fontFamily="@font/signikabold"
        />

    <TextView
        android:id="@+id/text_task_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="State"
        android:textColor="@color/purple_500"
        android:fontFamily="@font/signikasemibold"
        android:textSize="60px"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        />
    <TextView
        android:id="@+id/text_task_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:textColor="@color/black"
        android:textSize="50px"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/signikasemibold"
        />


</LinearLayout>